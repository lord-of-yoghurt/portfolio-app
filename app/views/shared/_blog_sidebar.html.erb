<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4>Topics</h4>
    <% @sidebar_topics.each do |topic| %>
      <span class="sidebar-topic"><%= fa_icon "hashtag", class: "fa" %>
        <%= link_to topic.title, topic_path(topic) %>
      </span>
    <% end %>
  </div>

  <div class="sidebar-module">
    <h4>Explore</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://www.facebook.com/the.big.ordovsky"><%= fa_icon "facebook-square"%></a></li>
      <li><a href="https://www.instagram.com/the_big_ordovsky/"><%= fa_icon "instagram"%></a></li>
      <li><a href="https://github.com/lord-of-yoghurt"><%= fa_icon "github"%></a></li>
    </ol>
  </div>
</div><!-- /.blog-sidebar -->
