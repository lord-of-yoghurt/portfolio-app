<!-- partial name must be singular!!! -->
<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.titleize, blog %></h2>
  <p class="blog-post-meta"><%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

  <% if logged_in?(:site_admin) %>
    <%= render partial: 'blogs/admin_actions', locals: { blog: blog } %>
  <% end %>

  <p><%= blog.body %></p>

</div><!-- /.blog-post -->
