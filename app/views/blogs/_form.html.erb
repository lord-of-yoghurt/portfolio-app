<%= form_for(blog) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |e| %>
      <%= js add_gritter(e, title: "Attention!", sticky: false, time: 3000) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: 'form-control', rows: 10, placeholder: 'Dirty details' %>
  </div>

  <div class="form-group">
    <%= form.submit "Blog it", class: 'btn btn-primary' %>
    <%= link_to "Nah", blogs_path, class: 'btn btn-danger', style: 'cursor:default;' %>
  </div>
<% end %>
