<h1><%= @portfolio_item.title %></h1>

<h3><%= @portfolio_item.subtitle %></h3>

<p><%= image_tag @portfolio_item.main_image %></p>

<p><%= @portfolio_item.body %></p>

<h3>Technologies used:</h3>

<ul>
  <% @portfolio_item.technologies.each do |tech| %>
    <li><%= tech.name %></li>
  <% end %>
</ul>

<p>
<%= link_to "Edit Item", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %>
<%= link_to "Delete Item", portfolio_path(@portfolio_item), method: :delete, data: { confirm: "Are you sure?" } if logged_in?(:site_admin) %>
<%= link_to "Back to Index", portfolios_path %>
</p>
